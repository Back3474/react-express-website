{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "types": ["node", "express", "cors", "sequelize"],
    "sourceMap": false
  },
  "include": [
    "src/**/*",
    "*.js",
    "controllers/**/*.js",
    "routes/**/*.js",
    "services/**/*.js"
  ]
}